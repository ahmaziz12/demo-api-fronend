<div class="d-flex justify-content-center">
  <div class="w-50 mt-5 pt-5">
    <div>
      <%= form_with  url: login_request_sessions_path, method: :post do |form| %>
        <div class="form-group">
          <%= form.label :email, "Email" %>
        <%= form.text_field :email, type: "email", class: "form-control" %>
        </div>
        <div class="form-group">
          <%= form.label :password %>
          <%= form.password_field :password, class: "form-control" %>
        </div>
        <%= form.submit "Login" , class: "btn btn-primary btn-block"%>
      <% end %>
    </div>
    <div class="mt-5">
      <span>Create an Account</span>
      <%= link_to 'Signup', signup_sessions_path, class: "btn btn-primary btn-block" %>
    </div>
  </div>
</div>
